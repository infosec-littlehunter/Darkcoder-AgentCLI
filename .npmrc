registry=https://registry.npmjs.org

# Memory management settings to prevent heap out of memory errors
# These settings apply to all npm commands in this project
node-options=--max-old-space-size=8192 --expose-gc

# Package management settings for consistent builds
fetch-timeout=120000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=5

# Reduce noise in output
audit=true
audit-level=moderate

# Ensure consistent dependency resolution
legacy-peer-deps=false
strict-peer-dependencies=false

# Optional dependencies are allowed but not required
ignore-scripts=false
